<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="backgroundcolor">@color/secondaryColor</item>
        <item name="cardbackground">@color/secondaryLightColor</item>
        <item name="textcolor">@color/secondaryTextColor</item>
        <item name="tintcolor">@color/primaryTextColor</item>
        <item name="android:textSize">12dp</item>
        <item name="buttoncolor">@color/secondaryLightColor</item>
        <item name="buttontextcolor">@color/secondaryTextColor</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
        <item name="toolbarcolor">@color/secondaryLightColor</item>
        <item name="cardviewtextcolor">@color/secondaryTextColor</item>
        <item name="dialogTheme">@style/MyDialogDefault</item>
        <item name="toolbarTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryNightcolor</item>
        <item name="colorPrimaryDark">@color/darkNightColor</item>
        <item name="colorAccent">@color/secondNightColor</item>
        <item name="backgroundcolor">@color/primaryNightcolor</item>
        <item name="cardbackground">@color/cardviewColor</item>
        <item name="textcolor">@color/textButtonNightColor</item>
        <item name="cardviewtextcolor">@android:color/black</item>
        <item name="tintcolor">@android:color/white</item>
        <item name="buttoncolor">@color/cardviewColor</item>
        <item name="color">@color/secondtextNightColor</item>
        <item name="buttontextcolor">@color/textButtonNightColor</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
        <item name="toolbarcolor">@color/toolbarbackgroundcolor</item>
        <item name="toolbarTextColor">@color/primaryTextColor</item>
        <item name="dialogTheme">@style/MyDialogNight</item>
    </style>

    <style name="MyDialogCommun">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@color/secondaryLightColor</item>
    </style>

    <style name="MyDialogNight" parent="MyDialogCommun">
        <item name="android:windowBackground">@color/cardviewColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="MyDialogDefault" parent="MyDialogCommun">
        <item name="android:windowBackground">@color/secondaryLightColor</item>
    </style>


    <style name="windowAnimationTransition">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="H1">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="corps1">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="bodyCardView">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">?attr/toolbarTextColor</item>
        <!--<item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>-->
        <item name="android:radius">5dp</item>
        <item name="android:shadowColor">?colorAccent</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
